record(longout, "$(P)$(R)UPDATE")
{
   field(DTYP, "asynInt32")
   field(OUT,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))ARAVIS_UPDATE")
   field(SCAN, "$(UPDATE=5 second)")
}

